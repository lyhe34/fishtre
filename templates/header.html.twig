<header class="bg-white sticky-top">
    <nav class="navbar container-fluid navbar-expand">
        <div class="container-xl d-lg-flex d-none">
            <div class="d-flex">
                <a class="navbar-brand" href="{{ path('app_home') }}"><div class="logo-temp text-white text-center d-flex align-items-center justify-content-center">LOGO</div></a>
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="header-item nav-link" href="#">À-Propos</a></li>
                    <li class="nav-item"><a class="header-item nav-link" href="{{ path('app_shop') }}">Boutique</a></li>
                    <li class="nav-item"><a class="header-item nav-link" href="#">Recettes</a></li>   
                    <li class="nav-item"><a class="header-item nav-link" href="#">Contact</a></li>
                </ul>
            </div>
            <ul class="navbar-nav">
                {% if app.user %}
                    <li class="nav-item">
                        <button class="nav-link header-item" data-bs-toggle="dropdown" aria-expanded="false">
                            COMPTE
                        </button>
                        <div class="dropdown">
                            <ul class="dropdown-menu dropdown-menu-end header-dropdown-menu">
                                <li><a class="header-item dropdown-item">Informations</a></li>
                                <li><a class="header-item dropdown-item" href="{{ path('app_orders') }}">Commandes</a></li>
                                <li><a class="header-item dropdown-item" href="{{ path('app_logout') }}">Déconnexion</a></li>
                            </ul>
                        </div>
                    </li>
                {% else %}
                    <li class="nav-item"><a class="header-item nav-link" href="{{ path('app_register')}}">INSCRIPTION</a></li>
                    <li class="nav-item"><a class="header-item nav-link" href="{{ path('app_login')}}">CONNEXION</a></li>
                {% endif %}
                <li class="nav-item"><button class="header-item nav-link" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasCart" aria-controls="offcanvasCart">PANIER ({{ component('CartCount', { count: cartManager.cart.cartProducts|length }) }})</button></li>
            </ul>
        </div>
        <div class="container-xl d-flex d-lg-none">
            <a class="navbar-brand" href="{{ path('app_home') }}"><div class="logo-temp text-white text-center d-flex align-items-center justify-content-center">LOGO</div></a>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <div class="dropdown">
                        <button class="header-button header-dropdown-button nav-link" data-bs-toggle="dropdown" aria-expanded="false">
                            <img class="header-button-img" src={{ asset('images/bars.svg') }}>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end header-dropdown-menu ">
                            <li><a class="header-dropdown-item dropdown-item color-blue" href="#">À-Propos</a></li>
                            <li><a class="header-dropdown-item dropdown-item color-blue" href="{{ path('app_shop') }}">Boutique</a></li>
                            <li><a class="header-dropdown-item dropdown-item color-blue" href="#">Recettes</a></li>
                            <li><a class="header-dropdown-item dropdown-item color-blue" href="#">Contact</a></li>
                        </ul>                        
                    </div>
                </li>
                <li class="nav-item">
                    <div class="dropdown">
                        <button type="button" class="header-button header-dropdown-button nav-link" data-bs-toggle="dropdown" aria-expanded="false">
                            <img class="header-button-img" src={{ asset('images/user.svg') }}>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end header-dropdown-menu color-blue">
                            {% if app.user %}
                                <li><a class="header-item dropdown-item">Informations</a></li>
                                <li><a class="header-item dropdown-item" href="{{ path('app_orders') }}">Commandes</a></li>
                                <li><a class="header-item dropdown-item" href="{{ path('app_logout') }}">Déconnexion</a></li>
                            {% else %}
                                <li><a class="header-dropdown-item dropdown-item color-blue" href="{{ path('app_register') }}">Inscription</a></li>
                                <li><a class="header-dropdown-item dropdown-item color-blue" href="{{ path('app_login') }}">Connexion</a></li>    
                            {% endif %}                        
                        </ul>
                    </div>   
                </li>
                <li class="nav-item">                    
                    <button class="header-button nav-link" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasCart" aria-controls="offcanvasCart">
                        <img class="header-button-img" src={{ asset('images/cart.svg') }}>
                    </button>
                </li>   
            </ul>
        </div>
    </nav>
    <div class="offcanvas offcanvas-end" id="offcanvasCart" tabindex="-1"  aria-labelledby="offcanvasCartLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title color-blue" id="offcanvasExampleLabel">Panier</h5>
            <button type="button" class="btn-close cart-btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body header-cart d-flex flex-column">
            <div class="header-cart-list">
                {{ component('CartList', { cartProducts: cart.cartProducts.toArray }) }}
            </div>
            {{ component('CartPaymentButton', { show: cart.cartProducts|length > 0 }) }}
        </div>
    </div>
</header>