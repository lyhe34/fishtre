{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    {% include 'header.html.twig' %}
    <main>
        {% if error %}
            <div class="alert alert-danger text-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <form class="security-form container form" method="post">
            <h1 class="form-head text-center">Connexion</h1>
            <div class="security-form__row form-row">
                <label class="form-label" for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control form-input" autocomplete="email" required autofocus>
            </div>
            <div class="security-form__row form-row">
                <label class="form-label" for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control form-input" autocomplete="current-password" required>
                <a class="mt-3 fs-6" href="{{ path('app_forgot_password_request') }}">Mot de passe oubli√© ?</a>
            </div>
            <div class="security-form__row form-row d-flex justify-content-center">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <button class="security-form__button form-button button-blue" type="submit">Se connecter</button>
            </div>
        </form>    
    </main>
    {% include 'footer.html.twig' %}
{% endblock %}
